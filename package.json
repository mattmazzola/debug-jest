{
  "name": "debug-jest",
  "version": "1.0.0",
  "description": "Debug Jest with Typescript and VS Code",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "test": "jest",
    "test:debug": "jest --runInBand"
  },
  "keywords": ["jest", "typescript", "vscode", "debug"],
  "author": "Matt Mazzola <mattmazzola@live.com> (https://github.com/mattmazzola)",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
